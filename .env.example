# Database (REQUIRED - no default)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5433/canpoli
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=1800
DATABASE_ECHO=false

# House of Commons API
HOC_API_BASE_URL=https://www.ourcommons.ca
HOC_API_TIMEOUT=10.0

# CORS (comma-separated list of allowed origins, empty for development mode)
CORS_ORIGINS=[]

# Rate Limiting
FREE_RATE_LIMIT_PER_MINUTE=50
PAID_RATE_LIMIT_PER_MINUTE=500
REDIS_URL=redis://localhost:6379/0

# API Keys
API_KEY_HMAC_SECRET=change-me

# Stripe Billing
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID=price_...
STRIPE_CHECKOUT_SUCCESS_URL=http://localhost:3000/billing/success?session_id={CHECKOUT_SESSION_ID}
STRIPE_CHECKOUT_CANCEL_URL=http://localhost:3000
STRIPE_PORTAL_RETURN_URL=http://localhost:3000/account

# Clerk Auth
CLERK_JWKS_URL=https://your-clerk-domain/.well-known/jwks.json
CLERK_ISSUER=https://your-clerk-domain
CLERK_AUDIENCE=your-clerk-audience

# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=
SENTRY_SEND_DEFAULT_PII=false
SENTRY_TRACES_SAMPLE_RATE=

# Application
DEBUG=false
LOG_LEVEL=INFO
